generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String
  content     String
  tags        String[]
  imageUrl    String?
  createdAt   DateTime @default(now())

  @@map("Blog")
}
